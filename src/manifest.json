{
    "manifest_version": 2,
    "name": "RokuKast",
    "description": "A Chrome extension to stream web videos to Roku devices.",
    "version": "0.0.2",
    "browser_action": {
      "default_icon": "icon16.png",
      "default_popup": "popup.html"
    },
    "background": {
      "scripts": [
        "background.js"
      ],
      "persistent": true
    },
    "content_scripts": [
      {
        "matches": [
          "http://*/*",
          "https://*/*"
        ],
        "js": [
          "contentScript.js"
        ]
      }
    ],
    "options_page": "options.html",
    "icons": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    },
    "permissions": [
      "webRequest",
      "tabs",
      "http://*/*",
      "https://*/*"
    ]
  } 